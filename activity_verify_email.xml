<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#edecff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_width="match_parent"
    tools:context="campusme.campusme.CampusMe"
    >
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Verify Your Email"
            android:id="@+id/MCVerify"
            android:textColor="#402ec9"
            android:typeface="normal" />

        <TextView
            android:id="@+id/verifyEmail"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="100dp"
            android:text="A verification email has been sent to your school email. Please go to your email and click the link! This process may take a few minutes..."
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#624eff" />

        <TextView
            android:id="@+id/Welcome"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to CampusMe!"
            android:layout_marginTop="40dp"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#402ec9" />


        <Button
            android:id="@+id/bGoToLogin"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="Go To Login"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="#402ec9" />

    </LinearLayout>

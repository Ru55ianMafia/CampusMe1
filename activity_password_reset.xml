<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#edecff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_width="match_parent"
    tools:context="campusme.campusme.CampusMe"
    >

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset Password"
        android:id="@+id/MCForgotPassword"
        android:textColor="#402ec9"
        android:typeface="normal" />

    <EditText
        android:id="@+id/etSchoolEmail"
        android:layout_marginTop="90dp"
        android:inputType="textEmailAddress"
        android:hint="School Email"
        android:textColorHint="#af9fff"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#402ec9" />

    <Button
        android:id="@+id/bSendEmail"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:text="Send Email"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:background="#402ec9" />

    <TextView
        android:id="@+id/verifyEmail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:text="You will receive a password reset email. Please Click on the link to reset your password."
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#624eff" />


    <TextView
        android:id="@+id/returnToLogin"
        android:layout_marginTop="90dp"
        android:textColor="#402ec9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Back to Login"
        android:layout_gravity="center_horizontal" />





</LinearLayout>

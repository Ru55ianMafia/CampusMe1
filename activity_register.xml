<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#edecff"
    android:layout_height="wrap_content"
    tools:context="campusme.campusme.Register"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#edecff"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Register CampusMe"
            android:id="@+id/MCRegister"
            android:textColor="#402ec9"
            android:typeface="normal" />

        <EditText
            android:id="@+id/etSchoolEmailRegister"
            android:inputType="textEmailAddress"
            android:hint="School Email"
            android:textColorHint="#af9fff"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:textColor="#FF7155FE" />

        <EditText
            android:id="@+id/etUsernameRegister"
            android:hint="Username"
            android:textColorHint="#af9fff"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#FF7155FE" />


        <EditText
            android:id="@+id/etPasswordRegister"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#af9fff"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF7155FE" />


        <EditText
            android:id="@+id/etConfirmPasswordRegister"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textColorHint="#af9fff"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#FF7155FE" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gender"
            android:id="@+id/gender"
            android:textColor="#402ec9"
            android:typeface="normal" />

        <Spinner
            android:id="@+id/sGender"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_gravity="center_horizontal"
            android:hint=""
            android:textColor="#402ec9"
            android:spinnerMode="dropdown" />


        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="State"
            android:id="@+id/schoolState"
            android:textColor="#402ec9"
            android:typeface="normal" />

        <!-- DROPDOWNS HERE-->
        <Spinner
            android:id="@+id/sState"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_gravity="center_horizontal"
            android:hint=""
            android:textColor="#402ec9"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="School"
            android:id="@+id/School"
            android:textColor="#402ec9"
            android:typeface="normal" />

        <!-- DROPDOWNS HERE-->
        <Spinner
            android:id="@+id/sSchool"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_gravity="center_horizontal"
            android:textColor="#402ec9"
            android:hint=""
            android:spinnerMode="dropdown" />



        <Button
            android:id="@+id/bRegister"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="Register"

            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="#402ec9" />
        <!-- NEED TO IMPLEMENT SCHOOL SEARCH FIELD-->

    </LinearLayout>
</ScrollView>
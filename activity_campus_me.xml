<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecff"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="campusme.campusme.CampusMe">


    <TextView
        android:id="@+id/MCLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Login CampusMe"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#402ec9"
        android:typeface="normal" />


    <EditText
        android:id="@+id/etSchoolEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="45dp"
        android:hint="School Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="#402ec9"
        android:textColorHint="#af9fff" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#402ec9"
        android:textColorHint="#af9fff" />


    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Forgot Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#402ec9" />


    <Button
        android:id="@+id/bLogin"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="#402ec9"
        android:text="Login"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/RegisterFromLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        android:text="Register CampusMe!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#402ec9" />


</LinearLayout>
